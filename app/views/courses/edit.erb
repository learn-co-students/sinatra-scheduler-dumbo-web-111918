<form action="/courses/<%= @course.id %>" method="POST">
  <input type="hidden" name="_method" value="PUT">

  <label for="course[name]">Course Name: </label>
  <input type="text" name="course[name]" value="<%= @course.name %>">

  <label for="course[professor]">Professor: </label>
  <input type="text" name="course[professor]" value="<%= @course.professor %>">

  <label for="course[credits]">Credits: </label>
  <input type="number" name="course[credits]" value="<%= @course.credits %>">

  <input type="submit" value="Edit <%= @course.name %>">
</form>
